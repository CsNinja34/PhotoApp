<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:id="@+id/linearRowellipse"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <ImageView android:id="@+id/imageEllipse"
            android:layout_height="@dimen/_64pxh"
            android:layout_width="@dimen/_64pxh"
            android:scaleType="centerCrop" circular="@{true}"
            imageRes="@{@drawable/img_ellipse_28x28}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse_28x28"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnjames"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_22pxv"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_weight="0.75" android:layout_width="0dp" android:orientation="vertical">
            <TextView android:ellipsize="end" android:id="@+id/txtJames"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                android:text="@string/lbl_james"
                style="@style/txtRobotobold13" tools:text="@string/lbl_james"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtThankyouThat"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9pxv"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                android:text="@string/msg_thank_you_that"
                style="@style/txtRobotoregular13" tools:text="@string/msg_thank_you_that"/>
        </LinearLayout>
    </LinearLayout>
</layout>
